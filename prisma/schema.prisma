// prisma/schema.prisma

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  password String
  name     String?
  role     String  @default("user") // "user" หรือ "admin"
  books    Book[]
}

model Book {
  id        String   @id @default(uuid())
  title     String
  authors   String
  thumbnail String
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}


